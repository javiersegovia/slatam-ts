{
  "name": "slatam-api-server",
  "version": "0.0.1",
  "description": "Slatam API Server",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ../generated/schema.graphql dist",
    "generate": "yarn clean && yarn prisma:generate",
    "prebuild": "yarn generate",
    "build": "nest build",
    "dev": "cross-env NODE_ENV=development nest start --watch",
    "predev:generate": "yarn generate",
    "dev:generate": "cross-env NODE_ENV=development GENERATE=true nest start",
    "dev:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start": "node -r ./tsconfig-paths dist/main",
    "migrate:dev": "prisma migrate dev --preview-feature",
    "migrate:dev:create": "prisma migrate dev --create-only --preview-feature",
    "migrate:reset": "prisma migrate reset --preview-feature",
    "migrate:deploy": "npx prisma migrate deploy --preview-feature",
    "migrate:status": "npx prisma migrate status --preview-feature",
    "migrate:resolve": "npx prisma migrate resolve --preview-feature",
    "migrate:push": "prisma db push --preview-feature",
    "migrate:push:force": "prisma db push --force --preview-feature",
    "prisma:studio": "npx prisma studio",
    "prisma:generate": "npx prisma generate",
    "prisma:generate:watch": "npx prisma generate --watch",
    "lint:lint": "eslint \"{src,apps,libs,specs}/**/*.ts\" --fix",
    "lint:format": "prettier --write \"src/**/*.ts\"",
    "lint:type-check": "tsc --pretty --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./specs/jest-e2e.json",
    "start:db": "yarn run migrate:up && yarn run prisma:generate && yarn run seed",
    "seed": "ts-node seeds/index.ts",
    "postinstall": "yarn run prisma:generate",
    "docker:db": "docker-compose -f docker-compose.db.yml up",
    "docker:seed": "docker exec -it nest-api yarn run seed",
    "docker": "docker-compose up",
    "docker:build": "docker-compose build"
  },
  "dependencies": {
    "@casl/ability": "^5.1.2",
    "@nestjs/common": "7.6.4",
    "@nestjs/config": "0.6.1",
    "@nestjs/core": "7.6.4",
    "@nestjs/graphql": "7.9.1",
    "@nestjs/passport": "7.1.5",
    "@nestjs/platform-express": "7.6.4",
    "@prisma/client": "2.15.0",
    "@sendgrid/client": "^7.4.2",
    "@sendgrid/helpers": "^7.4.2",
    "@sendgrid/mail": "^7.4.2",
    "apollo-server-express": "2.19.1",
    "bcrypt": "5.0.0",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "cookie-parser": "^1.4.5",
    "crypto": "^1.0.1",
    "deepmerge": "^4.2.2",
    "email-templates": "^8.0.3",
    "express-session": "^1.17.1",
    "graphql": "15.4.0",
    "graphql-tools": "7.0.2",
    "ms": "^2.1.3",
    "passport": "0.4.1",
    "passport-local": "^1.0.0",
    "pug": "^3.0.0",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@nestjs/cli": "7.5.4",
    "@nestjs/testing": "7.6.1",
    "@prisma/cli": "^2.13.1",
    "@types/bcrypt": "3.0.0",
    "@types/chance": "1.1.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/email-templates": "^8.0.0",
    "@types/express": "4.17.9",
    "@types/express-session": "^1.17.3",
    "@types/jest": "26.0.19",
    "@types/ms": "^0.7.31",
    "@types/node": "14.14.6",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.11.0",
    "chance": "1.1.7",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^4.0.0",
    "eslint": "7.16.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-prettier": "3.3.0",
    "husky": "^4.3.6",
    "jest": "26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "2.2.1",
    "prisma-dbml-generator": "0.4.0",
    "rimraf": "3.0.2",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.12",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run lint:type-check && yarn dev:generate"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint:lint",
      "yarn lint:format"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
