{
  "name": "slatam-client",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"yarn dev:base\" \"yarn generate --watch --errors-only\"",
    "dev:base": "next dev",
    "build": "next build",
    "build:analyze": "BUNDLE_ANALYZE=true yarn build",
    "start": "next start",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint:format": "prettier --write .",
    "lint:lint": "eslint . --ext ts --ext tsx --ext js",
    "lint:type-check": "tsc --pretty --noEmit",
    "find:unused": "next-unused",
    "generate": "graphql-codegen",
    "prestart": "yarn generate"
  },
  "dependencies": {
    "@headlessui/react": "^0.2.0",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/typography": "^0.3.1",
    "chart.js": "^2.9.4",
    "deepmerge": "^4.2.2",
    "faker": "^5.1.0",
    "graphql": "^15.4.0",
    "graphql-request": "^3.4.0",
    "lodash": "^4.17.20",
    "next": "^10.0.4",
    "nprogress": "^0.2.0",
    "react": "^17.0.1",
    "react-chartjs-2": "^2.11.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.14.0",
    "react-icons": "^4.1.0",
    "react-query": "^3.5.16",
    "react-select": "^3.1.1",
    "react-virtualized-auto-sizer": "^1.0.3",
    "react-window": "^1.8.6",
    "styled-components": "^5.2.1",
    "twin.macro": "^2.0.7"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.20.0",
    "@graphql-codegen/import-types-preset": "^1.18.1",
    "@graphql-codegen/typescript": "^1.20.0",
    "@graphql-codegen/typescript-operations": "^1.17.13",
    "@graphql-codegen/typescript-react-query": "^1.0.0",
    "@next/bundle-analyzer": "^10.0.1",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@types/faker": "^5.1.5",
    "@types/jest": "^26.0.19",
    "@types/lodash": "^4.14.167",
    "@types/node": "^14.14.16",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-select": "^3.1.2",
    "@types/react-window": "^1.8.2",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "autoprefixer": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-styled-components": "^1.12.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "husky": "^4.3.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.3",
    "next-unused": "^0.0.3",
    "postcss": "^8.2.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.2",
    "typescript": "4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn generate && lint-staged",
      "pre-push": "yarn lint:type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint:lint",
      "yarn lint:format"
    ]
  },
  "next-unused": {
    "alias": {
      "@components/*": [
        "src/components/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@@root/*": [
        "./*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@views/*": [
        "src/views/*"
      ]
    },
    "debug": true,
    "include": [
      "src/components",
      "src/lib",
      "src/pages",
      "src/views"
    ],
    "exclude": [],
    "entrypoints": [
      "./src/pages"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "endOfLine": "auto"
  },
  "babelMacros": {
    "twin": {
      "preset": "styled-components"
    }
  }
}
